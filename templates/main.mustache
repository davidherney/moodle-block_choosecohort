{{!
    @template block_choosecohort/main

    This template renders the template content area for a resource.

    Example context (json):
    { blockid: string }
}}

<div id="{{blockid}}" class="choosecohort-box">
    <div data-control="errors-box" style="text-align: center;"></div>
    <div class="controls-box">
        <input data-control="search-text" class="mr-sm-12" placeholder="{{#str}}search, block_choosecohort{{/str}}" type="text" />
        <button data-control="search-button" class="btn btn-secondary my-12 my-sm-0" type="button">
            {{#str}}search, block_choosecohort{{/str}}
        </button>
    </div>
    <div data-control="search-result" class="col-12">
        <div class="choosecohort-content">

        {{#cohorts}}
            <div class="one-cohort panel {{#selected}}selected{{/selected}}">
                <input id="chk_cohort_{{id}}" type="checkbox" name="cohort[]" value="{{idnumber}}" {{#selected}}checked{{/selected}}>
                <label for="chk_cohort_{{id}}"> {{name}} </label>
                {{#description}}
                <span class="btn btn-default" data-control="view-detail">{{#pix}}i/info, core{{/pix}}</span>
                <div class="one-description" style="display: none;">
                    {{{description}}}
                </div>
                {{/description}}
            </div>
        {{/cohorts}}

        </div>
    </div>
</div>
